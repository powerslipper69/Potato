#include <stdio.h>
int main() {
    int n, i, j, s;
    printf("Enter number of rows: ");
    scanf("%d", &n);

    printf("\nRight-Angle Triangle:\n");
    for (i = 1; i <= n; i++) {
        for (j = 1; j <= i; j++) printf("%d", i);
        printf("\n");
    }

    printf("\nDiamond Pattern:\n");
    for (i = 1; i <= n; i++) {
        for (s = i; s < n; s++) printf(" ");
        for (j = 1; j <= 2*i-1; j++) printf("%d", i);
        printf("\n");
    }
    for (i = n-1; i >= 1; i--) {
        for (s = n; s > i; s--) printf(" ");
        for (j = 1; j <= 2*i-1; j++) printf("%d", i);
        printf("\n");
    }

    printf("\nStar Pyramid:\n");
    for (i = 1; i <= n; i++) {
        for (s = i; s < n; s++) printf(" ");
        for (j = 1; j <= 2*i-1; j++) printf("*");
        printf("\n");
    }

    printf("\nAlphabet Pyramid:\n");
    for (i = 1; i <= n; i++) {
        for (s = i; s < n; s++) printf(" ");
        for (j = 1; j <= i; j++) printf("%c", 'A'+j-1);
        for (j = i-1; j >= 1; j--) printf("%c", 'A'+j-1);
        printf("\n");
    }
}
